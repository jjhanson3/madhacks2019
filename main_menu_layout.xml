<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main_layout_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/top_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#4CAF50"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="="
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textColor="#4CAF50" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" ECO-RIDE"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/button2"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="#"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textColor="#4CAF50" />
        </LinearLayout>

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="400dp" />

        <LinearLayout
            android:id="@+id/main_gap1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/find_row"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/find_left_gap"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>

            <Button
                android:id="@+id/button3"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#4CAF50"
                android:text="Find a Ride"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:id="@+id/find_right_gap"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/share_left_gap"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>

            <Button
                android:id="@+id/share_ride_button"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:background="#4CAF50"
                android:text="Share a Ride"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:id="@+id/share_right_gap"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
